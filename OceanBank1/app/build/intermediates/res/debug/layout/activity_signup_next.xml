<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.banksite.oceanbank.SignupNextActivity" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/new_sign_in_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:text="@string/new_signin_title" />

    <TextView
        android:id="@+id/new_username_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_sign_in_info_title"
        android:layout_alignStart="@+id/new_sign_in_info_title"
        android:layout_below="@+id/new_sign_in_info_title"
        android:layout_marginTop="25dp"
        android:text="@string/username_title" />

    <EditText
        android:id="@+id/new_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_username_title"
        android:layout_alignBottom="@+id/new_username_title"
        android:layout_alignLeft="@+id/new_password"
        android:layout_alignStart="@+id/new_password"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/new_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_username_title"
        android:layout_alignStart="@+id/new_username_title"
        android:layout_below="@+id/new_username"
        android:layout_marginTop="40dp"
        android:text="@string/password_title" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_password_title"
        android:layout_alignBottom="@+id/new_password_title"
        android:layout_alignLeft="@+id/new_password_confirm"
        android:layout_alignStart="@+id/new_password_confirm"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/confirm_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_password_title"
        android:layout_alignStart="@+id/new_password_title"
        android:layout_below="@+id/new_password"
        android:layout_marginTop="40dp"
        android:text="@string/confirm_password_title" />

    <EditText
        android:id="@+id/new_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/confirm_password_title"
        android:layout_alignBottom="@+id/confirm_password_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/confirm_password_title"
        android:layout_toRightOf="@+id/confirm_password_title"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/pw_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirm_password_title"
        android:layout_alignStart="@+id/confirm_password_title"
        android:layout_alignEnd="@+id/new_password_confirm"
        android:layout_alignRight="@+id/new_password_confirm"
        android:layout_below="@+id/new_password_confirm"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/security_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw_accept"
        android:layout_alignStart="@+id/pw_accept"
        android:layout_below="@+id/pw_accept"
        android:layout_marginTop="10dp"
        android:text="@string/security_question_title" />

    <TextView
        android:id="@+id/security_answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/security_question_title"
        android:layout_alignStart="@+id/security_question_title"
        android:layout_below="@+id/question_spinner"
        android:layout_marginTop="30dp"
        android:text="@string/security_answer_title" />

    <EditText
        android:id="@+id/security_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/security_answer_title"
        android:layout_alignBottom="@+id/security_answer_title"
        android:layout_alignLeft="@+id/new_password_confirm"
        android:layout_alignStart="@+id/new_password_confirm"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/next_signup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nextbutton1"
        android:layout_below="@+id/security_answer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_spinner"
        android:layout_below="@+id/security_question_title"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/security_question_title"
        android:layout_alignStart="@+id/security_question_title" />

</RelativeLayout>
</ScrollView><!-- From: file:/Users/j.keifer/Desktop/CSE110-Ocean-s-10/OceanBank1/app/src/main/res/layout/activity_signup_next.xml -->